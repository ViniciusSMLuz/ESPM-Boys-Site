	<h1>Shows</h1>

	<% for (let i = 0; i < shows.length; i++) { %>
		<div class="ticket">
			<div class="coupon">
				<div class="container">
					<div class="row rowcoupon">						
						<div class="col-sm-2 colunaEsquerda">
							<h1>13</h1>
                            <h2 class="mes">Out</h2>
						</div>
						<div class="col-sm-6" >
							<h1>
								<%= shows[i].nome %>
							</h1>
							<div class="textoCoupom">
								<p>
									<%= shows[i].data %>
								</p>
								<p>
									<%= shows[i].endereco %>
								</p>
							</div>
						</div>
						<div class="col-sm-4">
                            <div class="textoCoupom">
                                <a href="<%= shows[i].link %>"><button>Tickets</button></a>
                            </div>
                        </div>
					</div>
				</div>
			</div>
		</div>
	<% } %>

	<h1>Shows Passados</h1>

</div>

<%- contentFor("head") %>
<link rel="stylesheet" type="text/css" href="/public/css/show.css"/>

<script>

		const regLT = /\</g;
		const regGT = /\>/g;
		const regAPOS = /\'/g;
		const regQUOT = /\"/g;
		const regGRAVE = /\`/g;

			function encode(texto) {

				if(!texto){
					return "";
				}

				let temp = texto.replace(regLT, "&lt;");
				temp = temp.replace(regGT, "&gt;");
				temp = temp.replace(regAPOS, "&apos;");
				temp = temp.replace(regQUOT, "&quot;");
				temp = temp.replace(regGRAVE, "&grave;");

				return temp;

			}
			
</script>